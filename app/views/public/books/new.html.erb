<div class="container px-5 my-5">
 <div class="row">
  <div class="px-5">
   <h1 class="mt-5">本の新規投稿登録</h1>
   <%= form_with model: @book, url: books_path(@book.id), method: :post do |f| %>
    <div class="form-group mt-3">
      <label for="book_title">タイトル</label>
      　<%= f.text_field :title, class: "form-control book_title" %>
    </div>
    <div class="form-groupmt-3">
      <label for="book_body">本の内容</label>
      <%= f.text_area :body, class: "form-control book_body" %>
    </div>
    <div class="form-group mt-3">
     <label for="book_genre">ジャンル</label>
     <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
    <div class="row mt-5" id="star">
     <%= f.label :star, '評価', class: "form-control label" %>
     <%= f.hidden_field :star, id: :review_star %>
    </div>
     <script>
      $('#star').empty();
      $('#star').raty({
       size: 36,
       starOff: '<%= asset_path('star-off.png') %>',
       starOn: '<%= asset_path('star-on.png') %>',
       starHalf: '<%= asset_path('star-half.png') %>',
       half: true,
       scoreName: 'book[star]',
      });
     </script>
    <div class="form-group mt-3">
      <%= f.submit '新規投稿登録', class: "btn btn-sm btn-success" %>
    </div>
   <% end %>
  </div>
 </div>
</div>