<div class="container px-5 my-5">
  <h2 class="mt-3">ジャンル編集</h2>
  <div class="row">
    <%= form_with model: @genre, url: genre_path(@genre.id), method: :patch do |f| %>
    <%= render 'public/genres/errors', genre: @genre %>
     <div class="form-group mt-3">
       <label for="genre_name">ジャンル名</label>
       <%= f.text_field :name, autofocus: true, id: "genre_name", placeholder: "ジャンル名", class: "form-control name" %>
     </div>
     <div class="form-group mt-3">
       <%= f.submit "変更を保存する", class: "btn btn-success" %>
     </div>
    <% end %>
  </div>
</div>
