<main>
  <div>
    <div>
      <div>
        <h2><%= @customer.name %>さんの会員詳細</h2>
        <div class="form-group">
          <p>会員ID</p>
          <%= @customer.id %>
        </div>
        <div class="form-group">
          <p>名前</p>
          <%= @customer.name %>
        </div>
        <div class="form-group">
          <p>メールアドレス</p>
          <%= @customer.email %>
        </div>
        <div class="form-group">
          <p>会員ステータス</p>
          <%= @customer.is_deleted ? "退会" : "有効" %>
        </div>
        <div class="form-group">
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  </div>
</main>
