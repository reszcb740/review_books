<main>
  <div>
    <div>
      <h2><%= @customer.name %>さんの会員情報編集</h2>
      <div>会員ID</div>
      <div><%= @customer.id %></div>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
       <div class="form-group">
         <label for="customer_name">名前</label>
         <%= f.text_field :name, autofocus: true, id: "customer_name", placeholder: "名前", class: "form-control name" %>
       </div>
       <div class="form-group">
         <label for="customer_email">メールアドレス</label>
         <%= f.text_field :email, autofocus: true, id: "customer_email", placeholder: "メールアドレス", class: "form-control email" %>
       </div>
       <div class="form-group">
         <label for="customer_state">会員ステータス</label>
         <%= f.radio_button :is_deleted, "false" %><%= f.label :is_deleted, "有効" %>
         <%= f.radio_button :is_deleted, "true" %><%= f.label :is_deleted, "退会" %>
       </div>
       <div class="form-group">
         <%= f.submit "変更を保存する", class: "btn btn-sm btn-success" %>
       </div>
      <% end %>
    </div>
  </div>
</main>
