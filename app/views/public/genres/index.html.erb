<div class="container my-5">
  <h1 class="mt-3">ジャンル一覧・追加</h1>
  <div class="row px-5">
    <div class="mt-5">
      <%= form_with model: @genre, url: genres_path, method: :post do |f| %>
      <%= render 'public/layouts/errors', obj: @genre %>
       <div class="form-group mt-3">
         <label for="genre_name">ジャンル名</label>
         <%= f.text_field :name, autofocus: true, id: "genre_name", placeholder: "ジャンル名", class: 'form-control name' %>
       </div>
       <div class="form-group mt-3">
         <%= f.submit "新規登録", class: 'btn btn-success' %>
       </div>
      <% end %>
       <table class="table table-hover table-inverse">
         <thead>
           <tr>ジャンル</tr>
           <tr colspan="2"></tr>
         </thead>
      <% @genres.each do |genre| %>
         <tbody>
           <td>
             <%= genre.name %>
           </td>
           <td>
             <%= link_to "編集する", edit_genre_path(genre.id), class: 'btn btn-success' %>
           </td>
         </tbody>
       </table>
      <% end %>
    </div>
  </div>
</div>
