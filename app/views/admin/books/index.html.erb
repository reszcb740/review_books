<div>
  <h1>本投稿一覧</h1>
  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th>本ID</th>
            <th>タイトル</th>
            <th>本の詳細</th>
            <th>ジャンル</th>
            <th>レビュー</th>
            <th>本のコメント</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
             <td><%= book.id %></td>
             <td><%= link_to book.title, admin_book_path(book.id) %></td>
             <td><%= book.body %></td>
             <td><%= book.genre.name %></td>
             <td></td>
             <td></td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
