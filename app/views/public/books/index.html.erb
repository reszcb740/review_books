<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'public/books/index', book: @book, customer: @customer %>
     <div class="col-md-8 offset-md-1">
       <h2>お勧めの本</h2>
       <table calss="table table-hover table-inverse">
         <thead>
           <tr>
             <th>タイトル</th>
             <th>本の詳細</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <div>
             <%= link_to "新規登録", new_public_book_path, class: "btn btn-sm btn-primary" %>
           </div>
           <% @books.each do |book| %>
            <tr>
              <td>
                 <%= image_tag book.customer.get_profile_image(40, 40) %>
              </td>
              <td><%= link_to book.title, public_book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td>コメント数: <%= book.book_comments.count %></td>
            </tr>
           <% end %>
         </tbody>
       </table>
     </div>
  </div>
</div>
