<div class="container my-4">
  <div class="row">
    <div class="offset-1">
      <h2>ログイン</h2>
    </div>
  </div>

   <div class="row">
     <div class="offset-4 mt-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mt-3">
            <%= f.label :名前, class: "label" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "form-control offset-1 col-10" %>
          </div>

          <div class="for-group mt-3">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control offset-1 col-10" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="for-m group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="form-group mt-5">
            <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
     </div>

      <div class="row">
        <div class="offset-4 mx-auto mt-5">
          <%= render "public/shared/links" %>
        </div>
      </div>
 </div>
</div>
