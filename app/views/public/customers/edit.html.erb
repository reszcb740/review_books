<div>
  <div>
    <div>
      <h2>会員情報編集</h2>
      <%= form_with model: public_customer_path(@customer.id) do |f| %>
       <div class="form-group">
         <label for="cutomer_name">名前</label>
         <%= f.text_field :name, autofocus: true, id: "customer_name", placeholder: "名前", class: "form-control name" %>
       </div>
       <div class="form-group">
         <label for="customer_image">ユーザー画像</label>
         <%= f.file_field :profile_image, palceholder: "プロフィール画像", accept: "image/*", class: "form-control-file customer_image" %>
       </div>
       <div class="form-group">
         <label for="customer_introduction">自己紹介</label>
         <%= f.text_area :introduction, placeholder: "自己紹介文", class: "form-control introduction" %>
       </div>
       <div class="form-group">
         <%= f.submit "会員情報を更新する", class: "btn btn-sm btn-secondary" %>
       </div>
      <% end %>
    </div>
  </div>
</div>
