<div class="container px-5 px-sm-0">
 <div class="row">
  <div>
   <h1 class="mt-3">本の新規投稿登録</h1>
   <%= form_with model: @book, url: public_books_path(@book.id), method: :post do |f| %>
    <div class="form-group">
      <label for="book_title">タイトル</label>
      　<%= f.text_field :title, class: "form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_body">本の内容</label>
      <%= f.text_area :body, class: "form-control book_body" %>
    </div>
    <div class="form-group">
     <label for="book_genre">ジャンル</label>
     <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
    <div class="form-group row" id="star">
     <%= f.label :star, '評価', class: "form-control label" %>
     <%= f.hidden_field :star, id: :review_star %>
    </div>
    <script>
     $('#star').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',

      scoreName: 'book[star]',
      half: false,
     });
    </script>
    <div class="form-group">
      <%= f.submit '新規投稿登録', class: "btn btn-sm btn-success" %>
    </div>
   <% end %>
  </div>
 </div>
</div>