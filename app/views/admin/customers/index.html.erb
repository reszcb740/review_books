<main>
  <div>
    <div>
      <div>
        <table>
          <thead>
            <tr>
              <th>会員ID</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
             <tr>
               <td><%= customer.id %></td>
               <td>
                 <%= link_to customer.name, admin_customer_path(customer.id) %>
               </td>
               <td><%= customer.email %></td>
               <td><%= customer.is_deleted %></td>
             </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
