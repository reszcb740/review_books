<div class="container px-5 my-5">
  <h1 class="mt-3">本投稿一覧</h1>
  <div class="row px-5">
    <div class="list-group-horizontal-md-3">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>本ID</th>
            <th>タイトル</th>
            <th>本の詳細</th>
            <th>ジャンル</th>
            <th>本のコメント</th>
            <th>レビュー</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
             <td><%= book.id %></td>
             <td><%= link_to book.title, admin_book_path(book.id) %></td>
             <td><%= book.body %></td>
             <td><%= book.genre.name %></td>
             <td>コメント数: <%= book.book_comments.count %></td>
             <td id="star-rate-<%= book.id %>"></td>
             <script>
                $('#star-rate-<%= book.id %>').empty();
                $('#star-rate-<%= book.id %>').raty({
                  size: 24,
                  starOff: '<%= asset_path('star-off.png') %>',
                  starOn: '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= book.star %>,
                });
              </script>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
