<div class="container my-3">
  <div class="row">
    <div class="offset-5">
      <h2>新規会員登録</h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="offset-4 col-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :名前, class: "brown-boder px-3" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control offset-1 col-5" %>
        </div>

        <div class="form-group">
          <%= f.label :メール, class: "brown-border px-3" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control ml-3 col-12" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード, class: "brown-border px-3" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control ml-3 col-12" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control ml-3 col-12" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success ml-3" %>
        </div>
      <% end %>
      <div class="row mb-2">
        <div class="offset-3">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>