<div class="container px-5 my-5">
  <div class="row mt-5">
    <div class="px-5">
      <h1 class="mt-5">お勧めする本の編集</h1>
      <%= form_with model: @book, url: book_path(@book.id) do |f| %>
       <div class="form-group mt-3">
         <label for="book_title">タイトル</label>
         <%= f.text_field :title, class: "form-control book_title" %>
       </div>
       <div class="form-group mt-3">
         <label for="book_body">本の詳細</label>
         <%= f.text_area :body, class: "form-control book_body" %>
       </div>
       <div class="form-group mt-3">
         <label for="book_genre">ジャンル</label>
         <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
       </div>
       <div class="row mt-5" id="star">
        <%= f.label :star, '評価', class: "form-control label" %>
        <%= f.hidden_field :star, id: :review_star %>
        </div>
        <script>
          $('#star').empty();
          $('#star').raty({
            size: 36,
            starOff: '<%= asset_path('star-off.png') %>',
            starOn: '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            scoreName: 'book[star]',
          });
        </script>
       <div class="form-group mt-3">
         <%= f.submit '変更を保存する', class: "btn btn-success" %>
       </div>
      <% end %>

      <%= link_to "詳細", book_path(@book.id), class: "book" %>
       |
      <%= link_to "戻る", books_path, class: "back" %>
    </div>
  </div>
</div>
