<div class="container px-5 my-5">
  <h2 class="mt-3">本の投稿詳細</h2>
  <div class="row px-5">
    <div class="list-group-horizontal-md-3">
      <div class="form-group mt-3">
        <%= @book.title %>
      </div>
      <div class="form-group mt-3">
        <%= @book.body %>
      </div>
      <div class="form-group mt-3">
        <%= @book.genre.name %>
      </div>
      <div class="form-group mt-3">
        コメント数: <%= @book.book_comments.count %>
      <div class="comments-area">
        <%= render 'admin/book_comments/comment', book: @book, book_comment: @book_comment %>
      </div>
      </div>
      <div id="star-rate<%= @book.id %>"></div>
      <script>
        $('#star-rate<%= @book.id %>').empty();
        $('#star-rate<%= @book.id %>').raty({
          size: 24,
          starOff: '<%= asset_path('star-off.png') %>',
          starOn: '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          score: <%= @book.star %>,
        });
      </script>
      <div class="form-group mt-3">
        <%= link_to "編集する", edit_admin_book_path(@book.id), class: "btn btn-sm btn-success" %>
      </div>
      <div class="form-group mt-3">
        <%= link_to "戻る", admin_books_path, class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
</div>