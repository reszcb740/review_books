<div>
  <h1>本投稿一覧</h1>
  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th>本ID</th>
            <th>タイトル</th>
            <th>本の詳細</th>
            <th>ジャンル</th>
            <th>本のコメント</th>
            <th>レビュー</th>
            <th colspan="6"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
             <td><%= book.id %></td>
             <td><%= link_to book.title, admin_book_path(book.id) %></td>
             <td><%= book.body %></td>
             <td><%= book.genre.name %></td>
             <td>コメント数: <%= book.book_comments.count %></td>
             <td id="star-rate<%= book.id %>"></td>
             <script>
                $('#star-rate<%= book.id %>').raty({
                  size      : 36,
                  starOff   : '<%= asset_path('star-off.png') %>',
                  starOn    : '<%= asset_path('star-on.png') %>',
                  half      : true,
                  readOnly: true,
                  score: <%= book.star %>,
                });
              </script>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
